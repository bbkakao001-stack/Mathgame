<script>const canvas=document.getElementById('canvas');const ctx=canvas.getContext('2d');let isDrawing=false;let lastX=0;let lastY=0;canvas.width=600;canvas.height=300;ctx.lineWidth=8;ctx.lineCap='round';ctx.lineJoin='round';ctx.strokeStyle='#667eea';function getPosition(e){const rect=canvas.getBoundingClientRect();const scaleX=canvas.width/rect.width;const scaleY=canvas.height/rect.height;if(e.touches){return{x:(e.touches[0].clientX-rect.left)*scaleX,y:(e.touches[0].clientY-rect.top)*scaleY}}return{x:(e.clientX-rect.left)*scaleX,y:(e.clientY-rect.top)*scaleY}}canvas.addEventListener('mousedown',e=>{isDrawing=true;const pos=getPosition(e);lastX=pos.x;lastY=pos.y});canvas.addEventListener('mousemove',e=>{if(!isDrawing)return;const pos=getPosition(e);ctx.beginPath();ctx.moveTo(lastX,lastY);ctx.lineTo(pos.x,pos.y);ctx.stroke();lastX=pos.x;lastY=pos.y});canvas.addEventListener('mouseup',()=>isDrawing=false);canvas.addEventListener('mouseout',()=>isDrawing=false);canvas.addEventListener('touchstart',e=>{e.preventDefault();isDrawing=true;const pos=getPosition(e);lastX=pos.x;lastY=pos.y});canvas.addEventListener('touchmove',e=>{e.preventDefault();if(!isDrawing)return;const pos=getPosition(e);ctx.beginPath();ctx.moveTo(lastX,lastY);ctx.lineTo(pos.x,pos.y);ctx.stroke();lastX=pos.x;lastY=pos.y});canvas.addEventListener('touchend',()=>isDrawing=false);function clearCanvas(){ctx.clearRect(0,0,canvas.width,canvas.height);document.getElementById('recognized-number').style.display='none'}let score=0;let currentQuestion=1;let correctAnswer=0;const totalQuestions=10;const conversionTypes=[{from:'m',to:'cm',factor:100,fromName:'‡πÄ‡∏°‡∏ï‡∏£',toName:'‡πÄ‡∏ã‡∏ô‡∏ï‡∏¥‡πÄ‡∏°‡∏ï‡∏£'},{from:'cm',to:'mm',factor:10,fromName:'‡πÄ‡∏ã‡∏ô‡∏ï‡∏¥‡πÄ‡∏°‡∏ï‡∏£',toName:'‡∏°‡∏¥‡∏•‡∏•‡∏¥‡πÄ‡∏°‡∏ï‡∏£'},{from:'m',to:'mm',factor:1000,fromName:'‡πÄ‡∏°‡∏ï‡∏£',toName:'‡∏°‡∏¥‡∏•‡∏•‡∏¥‡πÄ‡∏°‡∏ï‡∏£'},{from:'cm',to:'m',factor:.01,fromName:'‡πÄ‡∏ã‡∏ô‡∏ï‡∏¥‡πÄ‡∏°‡∏ï‡∏£',toName:'‡πÄ‡∏°‡∏ï‡∏£'},{from:'mm',to:'cm',factor:.1,fromName:'‡∏°‡∏¥‡∏•‡∏•‡∏¥‡πÄ‡∏°‡∏ï‡∏£',toName:'‡πÄ‡∏ã‡∏ô‡∏ï‡∏¥‡πÄ‡∏°‡∏ï‡∏£'}];function generateQuestion(){const type=conversionTypes[Math.floor(Math.random()*conversionTypes.length)];let value;if(type.factor>=1){value=Math.floor(Math.random()*10)+1}else{value=Math.floor(Math.random()*10)*10+10}correctAnswer=Math.round(value*type.factor*100)/100;document.getElementById('question').textContent=`${value} ${type.fromName} ‡πÄ‡∏ó‡πà‡∏≤‡∏Å‡∏±‡∏ö‡∏Å‡∏µ‡πà ${type.toName}?`;document.getElementById('unit-display').innerHTML=`<div class="unit-display">${value} ${type.from}</div><div class="unit-display" style="background:#f7f7f7;color:#888">= ? ${type.to}</div>`}function recognizeNumber(){const imageData=ctx.getImageData(0,0,canvas.width,canvas.height);const pixels=imageData.data;let hasDrawing=false;for(let i=3;i<pixels.length;i+=4){if(pixels[i]>0){hasDrawing=true;break}}if(!hasDrawing)return null;const userInput=prompt('AI ‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏õ‡∏£‡∏∞‡∏°‡∏ß‡∏•‡∏ú‡∏•... ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏û‡∏¥‡∏°‡∏û‡πå‡∏ï‡∏±‡∏ß‡πÄ‡∏•‡∏Ç‡∏ó‡∏µ‡πà‡∏Ñ‡∏∏‡∏ì‡∏ß‡∏≤‡∏î:');return userInput?parseFloat(userInput):null}function recognizeAndSubmit(){const recognizedNumber=recognizeNumber();if(recognizedNumber===null){alert('‚ö†Ô∏è ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏ß‡∏≤‡∏î‡∏ï‡∏±‡∏ß‡πÄ‡∏•‡∏Ç‡∏Å‡πà‡∏≠‡∏ô‡∏™‡πà‡∏á‡∏Ñ‡∏≥‡∏ï‡∏≠‡∏ö‡∏Ñ‡πà‡∏∞');return}document.getElementById('recognized-number').style.display='block';document.getElementById('recognized-number').textContent=`ü§ñ AI ‡∏≠‡πà‡∏≤‡∏ô‡πÑ‡∏î‡πâ: ${recognizedNumber}`;checkAnswer(recognizedNumber)}function checkAnswer(userAnswer){const resultBox=document.getElementById('result-box');const nextBtn=document.getElementById('next-btn');const isCorrect=Math.abs(userAnswer-correctAnswer)<.1;if(isCorrect){score+=10;resultBox.className='result-box result-correct';resultBox.innerHTML=`üéâ ‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á! ‡πÄ‡∏Å‡πà‡∏á‡∏°‡∏≤‡∏Å! üéâ<br>‡∏Ñ‡∏≥‡∏ï‡∏≠‡∏ö‡∏Ñ‡∏∑‡∏≠ ${correctAnswer}`}else{resultBox.className='result-box result-wrong';resultBox.innerHTML=`üòä ‡∏•‡∏≠‡∏á‡πÉ‡∏´‡∏°‡πà‡∏≠‡∏µ‡∏Å‡∏Ñ‡∏£‡∏±‡πâ‡∏á‡∏ô‡∏∞!<br>‡∏Ñ‡∏≥‡∏ï‡∏≠‡∏ö‡∏ó‡∏µ‡πà‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á‡∏Ñ‡∏∑‡∏≠ ${correctAnswer}`}resultBox.style.display='block';nextBtn.style.display='inline-block';document.getElementById('score').textContent=score}function nextQuestion(){if(currentQuestion>=totalQuestions){showFinalScore();return}currentQuestion++;document.getElementById('question-number').textContent=currentQuestion;document.getElementById('result-box').style.display='none';document.getElementById('next-btn').style.display='none';clearCanvas();generateQuestion()}function showFinalScore(){const percentage=(score/(totalQuestions*10))*100;let message='';if(percentage>=80){message='üèÜ ‡∏¢‡∏≠‡∏î‡πÄ‡∏¢‡∏µ‡πà‡∏¢‡∏°! ‡πÄ‡∏Å‡πà‡∏á‡∏°‡∏≤‡∏Å‡πÜ ‡πÄ‡∏•‡∏¢‡∏Ñ‡πà‡∏∞!'}else if(percentage>=60){message='üëç ‡∏î‡∏µ‡∏°‡∏≤‡∏Å! ‡∏û‡∏¢‡∏≤‡∏¢‡∏≤‡∏°‡∏ï‡πà‡∏≠‡πÑ‡∏õ‡∏ô‡∏∞‡∏Ñ‡∏∞!'}else{message='üí™ ‡∏™‡∏π‡πâ‡πÜ ‡∏ô‡∏∞‡∏Ñ‡∏∞! ‡∏•‡∏≠‡∏á‡πÄ‡∏•‡πà‡∏ô‡πÉ‡∏´‡∏°‡πà‡∏≠‡∏µ‡∏Å‡∏Ñ‡∏£‡∏±‡πâ‡∏á‡πÑ‡∏î‡πâ‡πÄ‡∏•‡∏¢!'}const resultBox=document.getElementById('result-box');resultBox.className='result-box result-correct';resultBox.innerHTML=`<h2>üéä ‡∏à‡∏ö‡πÄ‡∏Å‡∏°‡πÅ‡∏•‡πâ‡∏ß! üéä</h2><p style="font-size:2em;margin:20px 0">${score}/${totalQuestions*10} ‡∏Ñ‡∏∞‡πÅ‡∏ô‡∏ô</p><p>${message}</p><button class="btn btn-next" onclick="location.reload()" style="margin-top:20px">üîÑ ‡πÄ‡∏•‡πà‡∏ô‡πÉ‡∏´‡∏°‡πà</button>`;resultBox.style.display='block';document.getElementById('next-btn').style.display='none'}generateQuestion()</script>
